{
  "name": "node-typescript-service",
  "version": "1.0.0",
  "description": "A RESTful API service built with Node.js, TypeScript, and Express.",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc -p .",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "db:setup": "ts-node src/database/db_setup.ts",
    "db:seed": "ts-node src/database/db_seed.ts",
    "db:init": "ts-node src/database/db_init.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "author": "Simone Fermani",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.13",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/express": "^5.0.1",
    "@types/joi": "^17.2.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.0"
  }
}
